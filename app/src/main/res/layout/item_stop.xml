<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_view_padding"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.Cab9Driver.BookingDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_stop" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_stop_address"
        style="@style/TextAppearance.Cab9Driver.BookingDetailInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:maxLines="1"
        tools:text="@tools:sample/lorem/random" />

</LinearLayout>