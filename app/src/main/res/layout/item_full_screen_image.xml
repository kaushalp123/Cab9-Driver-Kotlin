<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_weight="2"
    android:layout_margin="@dimen/common_view_padding_half"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Cab9Driver.RoundedCorner"
        tools:src="@drawable/img_chat_files_placeholder" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_swipe_next"
        style="@style/SFProSemiBoldFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/label_swipe_next"
        android:textColor="@color/brand_color" />

</LinearLayout>