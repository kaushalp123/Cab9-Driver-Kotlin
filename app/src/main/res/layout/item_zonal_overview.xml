<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/common_margin"
    android:paddingVertical="@dimen/common_view_padding"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_driver_rank"
            style="@style/SFProMediumFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corner_2dp"
            android:backgroundTint="@color/bg_color_rank"
            android:paddingHorizontal="4dp"
            android:textColor="@color/text_color_rank"
            android:textSize="@dimen/text_size_small"
            tools:text="Rank: 3"
            tools:visibility="gone" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_zone_name"
            style="@style/SFProMediumFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_large"
            tools:text="@tools:sample/lorem" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_zone_distance_away"
            style="@style/SFProMediumFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            tools:text="21.5" />

    </LinearLayout>

    <Space
        android:layout_width="@dimen/common_view_padding"
        android:layout_height="wrap_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_booking_count_1"
        style="@style/SFProMediumFontStyle"
        android:layout_width="@dimen/icon_size_regular"
        android:layout_height="@dimen/icon_size_regular"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_large"
        tools:text="5" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_booking_count_2"
        style="@style/SFProMediumFontStyle"
        android:layout_width="@dimen/icon_size_regular"
        android:layout_height="@dimen/icon_size_regular"
        android:layout_marginStart="@dimen/common_margin"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_large"
        tools:text="-" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_booking_count_3"
        style="@style/SFProMediumFontStyle"
        android:layout_width="@dimen/icon_size_regular"
        android:layout_height="@dimen/icon_size_regular"
        android:layout_marginStart="@dimen/common_margin"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_large"
        tools:text="1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_booking_count_4"
        style="@style/SFProMediumFontStyle"
        android:layout_width="@dimen/icon_size_regular"
        android:layout_height="@dimen/icon_size_regular"
        android:layout_marginStart="@dimen/common_margin"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_large"
        tools:text="12" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_driver_count"
        style="@style/SFProMediumFontStyle"
        android:layout_width="@dimen/icon_size_regular"
        android:layout_height="@dimen/icon_size_regular"
        android:layout_marginStart="@dimen/common_margin"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_large"
        tools:text="99" />

</LinearLayout>
