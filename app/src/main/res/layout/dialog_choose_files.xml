<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_upload_doc"
        android:src="@drawable/ic_baseline_attach_doc"
        android:tint="@color/penRoyalBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_lbl_doc"
        app:layout_constraintEnd_toEndOf="@+id/txt_lbl_doc"
        android:layout_margin="10dp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_lbl_doc"
        android:text="Documents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_upload_doc"
        android:layout_margin="10dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_upload_photo"
        android:tint="@color/penRoyalBlue"
        android:src="@drawable/ic_baseline_attach_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_upload_doc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_lbl_image"
        android:text="Photos"
        app:layout_constraintTop_toBottomOf="@+id/img_upload_photo"
        app:layout_constraintRight_toRightOf="@+id/img_upload_photo"
        app:layout_constraintLeft_toLeftOf="@+id/img_upload_photo"
        android:layout_margin="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>