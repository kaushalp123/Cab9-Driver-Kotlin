<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="@dimen/common_view_padding"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_quick_message"
        style="@style/SFProRegularFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:foreground="?selectableItemBackground"
        android:gravity="start"
        android:textSize="@dimen/text_size_large"
        tools:text="simple text simple text simple text simple text simple text simple text " />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:layout_marginStart="@dimen/common_view_padding_2x"
        android:src="@drawable/ic_baseline_minus_circle_outline_24"
        app:tint="@color/bg_offer_reject"
        android:foreground="?selectableItemBackground"/>

</LinearLayout>